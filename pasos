apt-get install -y \
     apt-transport-https \
     ca-certificates \
     curl \
     gnupg2 \
     software-properties-common

curl -fsSL https://download.docker.com/linux/debian/gpg | apt-key add -

add-apt-repository \
   "deb [arch=amd64] https://download.docker.com/linux/debian \
   $(lsb_release -cs) \
   stable"

apt-get update && apt-get install -y docker-ce git

cd /home/ && git clone https://github.com/daemonsoft/docker-node.git && cd docker-node

docker build . -t daemonsoft/node-tarea1

docker run --name node-tarea1 -p 80:3000 -d daemonsoft/node-tarea1
